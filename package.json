{
  "name": "ouorz-mono",
  "description": "Monorepo for Tony's Personal Site and Other Related Projects",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0 <17.0.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:main": "turbo run dev --filter=@ouorz/main",
    "dev:analytics": "turbo run dev --filter=@ouorz/analytics",
    "lint": "turbo run lint --parallel",
    "lint:main": "turbo run lint --filter=@ouorz/main",
    "lint:analytics": "turbo run lint --filter=@ouorz/analytics",
    "test": "turbo run test --parallel",
    "test:main": "turbo run test --filter=@ouorz/main",
    "build": "turbo run build --parallel",
    "build:main": "turbo run @ouorz/main#build --filter=@ouorz/main",
    "build:analytics": "turbo run @ouorz/analytics#build --filter=@ouorz/analytics",
    "start": "turbo run start --parallel",
    "start:main": "turbo run start --filter=@ouorz/main",
    "start:analytics": "turbo run start --filter=@ouorz/analytics",
    "upgrade:dev": "turbo run upgrade:dev --parallel --filter=./apps/* && yarn install",
    "upgrade:dev:main": "turbo run upgrade:dev --filter=@ouorz/main && yarn install",
    "upgrade:prod:main": "turbo run upgrade:prod --filter=@ouorz/main && yarn install",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@ouorz/eslint-config-next": "*",
    "@ouorz/prettier-config": "*",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "turbo": "latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "apps/next/**/*.+(ts|tsx)": [
      "yarn run lint:main",
      "prettier --write apps/next/**/*.+(ts|tsx)"
    ]
  }
}
